---
interface Props {
    title: string;
    description: string;
    image?: string;
    category: string;
    date: string;
    readTime: string;
    slug: string;
}

const { title, description, image, category, date, readTime, slug } =
    Astro.props;
const url = `/posts/${slug}`;
---

<a
    href={url}
    class="flex flex-col h-full rounded-xl overflow-hidden bg-white dark:bg-background-card shadow-sm hover:shadow-xl dark:shadow-none hover:-translate-y-1 dark:hover:shadow-primary/10 transition-all duration-300 group cursor-pointer border border-slate-200 dark:border-transparent hover:border-primary/50 dark:hover:border-primary/20"
>
    {
        image && image !== "/images/placeholder.jpg" ? (
            <div
                class="w-full h-48 bg-cover bg-center relative block"
                style={`background-image: url("${image}");`}
            >
                <div class="absolute inset-0 bg-gradient-to-t from-background-card to-transparent opacity-80" />
                <span class="absolute top-3 left-3 bg-background-dark/80 backdrop-blur-md text-primary text-xs font-bold px-3 py-1 rounded-full border border-primary/20">
                    {category}
                </span>
            </div>
        ) : (
            <div class="w-full h-48 relative block bg-gradient-to-br from-indigo-500 to-purple-600">
                <div class="absolute inset-0 bg-gradient-to-t from-background-card to-transparent opacity-60" />
                <span class="absolute top-3 left-3 bg-white/20 backdrop-blur-md text-white text-xs font-bold px-3 py-1 rounded-full border border-white/20">
                    {category}
                </span>
            </div>
        )
    }
    <div class="flex flex-col flex-1 p-5 gap-3">
        <h3
            class="text-slate-900 dark:text-white text-xl font-bold leading-tight group-hover:text-primary transition-colors"
        >
            {title}
        </h3>
        <p class="text-slate-600 dark:text-[#90c1cb] text-sm line-clamp-2">
            {description}
        </p>
        <div
            class="mt-auto pt-4 flex items-center justify-between border-t border-slate-100 dark:border-[#224249]/50"
        >
            <span class="text-slate-500 dark:text-[#90c1cb] text-xs font-mono"
                >{date} â€¢ {readTime}</span
            >
            <span
                class="material-symbols-outlined text-primary text-[20px] group-hover:translate-x-1 transition-transform"
            >
                arrow_forward
            </span>
        </div>
    </div>
</a>
