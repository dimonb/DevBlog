---
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
const allTags = allPosts.flatMap((post) => post.data.tags || []);
const uniqueTags = [...new Set(allTags)];
const trendingTags = uniqueTags.slice(0, 8);
const popularSlugs = [
    "homeassistant-garmin",
    "homeassistant-supervised",
    "curtain-control",
    "esphome-cairosvg",
    "zigbee-on-level",
    "esp8266-vl53l1x",
];
const popularPosts = popularSlugs
    .map((slug) => allPosts.find((p) => p.slug === slug))
    .filter((p): p is NonNullable<typeof p> => !!p);
---

<aside class="lg:w-1/3 space-y-8">
    <!-- About DimonBlog -->
    <div
        class="bg-card-light dark:bg-card-dark rounded-xl p-6 border border-slate-200 dark:border-white/5 shadow-sm"
    >
        <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-4">
            About DimonBlog
        </h3>
        <p
            class="text-slate-600 dark:text-slate-400 text-sm mb-4 leading-relaxed"
        >
            DimonBlog is a personal journal of experiments with Home Automation,
            IoT, and DIY electronics. Exploring Home Assistant, ESPHome, Zigbee,
            and Matter to build a smarter, local-controlled home.
        </p>
        <div class="flex gap-3">
            <a
                class="w-8 h-8 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-600 dark:text-slate-400 hover:bg-primary hover:text-white transition-colors"
                href="https://twitter.com/dimonb"
                target="_blank"
                aria-label="Twitter"
            >
                <span class="text-xs font-bold">X</span>
            </a>
            <a
                class="w-8 h-8 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-600 dark:text-slate-400 hover:bg-primary hover:text-white transition-colors"
                href="https://github.com/dimonb"
                target="_blank"
                aria-label="GitHub"
            >
                <span class="text-xs font-bold">Gh</span>
            </a>
            <a
                class="w-8 h-8 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-600 dark:text-slate-400 hover:bg-primary hover:text-white transition-colors"
                href="https://linkedin.com/in/dimonb"
                target="_blank"
                aria-label="LinkedIn"
            >
                <span class="text-xs font-bold">In</span>
            </a>
            <a
                class="w-8 h-8 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-600 dark:text-slate-400 hover:bg-primary hover:text-white transition-colors"
                href="https://t.me/dimonb"
                target="_blank"
                aria-label="Telegram"
            >
                <span class="text-xs font-bold">Tg</span>
            </a>
        </div>
    </div>

    <!-- Trending Tags -->
    <div
        class="bg-card-light dark:bg-card-dark rounded-xl p-6 border border-slate-200 dark:border-white/5 shadow-sm"
    >
        <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-4">
            Trending Tags
        </h3>
        <div class="flex flex-wrap gap-2">
            {
                trendingTags.map((tag) => (
                    <a
                        class="px-3 py-1 rounded bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 text-xs font-medium hover:bg-primary hover:text-white transition-colors capitalize"
                        href={`/archive?tag=${tag.toLowerCase()}`}
                    >
                        #{tag}
                    </a>
                ))
            }
        </div>
    </div>

    <!-- Most Popular -->
    <div
        class="bg-card-light dark:bg-card-dark rounded-xl p-6 border border-slate-200 dark:border-white/5 shadow-sm"
    >
        <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-4">
            Most Popular
        </h3>
        <div class="space-y-4">
            {
                popularPosts.map((post, index) => (
                    <>
                        <a class="group block" href={`/posts/${post.slug}`}>
                            <span class="text-primary text-xs font-bold uppercase mb-1 block">
                                {post.data.category}
                            </span>
                            <h4 class="text-sm font-semibold text-slate-800 dark:text-slate-200 group-hover:text-primary transition-colors">
                                {post.data.title}
                            </h4>
                        </a>
                        {index < popularPosts.length - 1 && (
                            <div class="h-px bg-slate-100 dark:bg-slate-800" />
                        )}
                    </>
                ))
            }
        </div>
    </div>
</aside>
